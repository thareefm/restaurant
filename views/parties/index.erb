	<th> Pay Status </th>
	<th>            </th>
	<th>            </th>
	<% @parties.each do |party| %>
	<tr>
		<td><%= party.table_number %></td>
		<td><%= party.number_guests %></td>
		<td><%= party.pay_status
						if party.pay_status == TRUE
							"Paid"
						else 
							"Unpaid"
						end %></td>   
